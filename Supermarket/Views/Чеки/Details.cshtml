@model List<Supermarket.Models.Товары_в_чеке.ТоварВЧеке>


@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Чеки</h4>
    <hr/>

    <table class="table">
        <tr>
            <th>
                Номер
            </th>
            <th>
               Наименование
            </th>
            <th>
                Количество
            </th>
            
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Номер)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Наименование)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Количество)
                </td>
              
            </tr>
        }

    </table>
</div>
<p>
   
    @Html.ActionLink("Back to List", "Index")
</p>
